<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_basla"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.simsekmustafamustafagmail.queueue.basla"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/walpapper">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Bird"
        android:textStyle="bold"
        android:textSize="70sp"/>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp">


        <TableRow
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/kirmiziyem"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 Puan"
                android:textSize="25sp"
                android:textStyle="italic"
                android:paddingLeft="10dp"/>

        </TableRow>

        <TableRow
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/yem"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 Puan"
                android:textStyle="italic"
                android:textSize="25sp"
                android:paddingLeft="10dp"/>

        </TableRow>

        <TableRow
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/tas"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oyun Bitti"
                android:textStyle="italic"
                android:textSize="25sp"
                android:paddingLeft="10dp"/>

        </TableRow>
    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BASLA"
        android:layout_marginTop="60dp"
        android:textStyle="italic"
        android:onClick="oyunaBasla"
        android:background="#1ce7be" />
</LinearLayout>
