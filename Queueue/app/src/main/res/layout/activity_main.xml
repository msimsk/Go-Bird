<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.simsekmustafamustafagmail.queueue.main"
    android:orientation="vertical"
    android:background="@drawable/walpapper">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/skorEtiketi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score : 300"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            />


    </LinearLayout>



    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/baslaEtiketi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baslamak İçin Dokun"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="130dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/kus"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/kus"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/yem"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/yem"/>

        <ImageView
            android:id="@+id/tas"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/tas"/>

        <ImageView
            android:id="@+id/kirmiziYem"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/kirmiziyem" />



    </FrameLayout>
</LinearLayout>
